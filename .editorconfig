root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true

[{Makefile,GNUmakefile}]
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

[*.{in,mk}]
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

[*.{cpp,hpp,ipp}]
charset = utf-8-bom
trim_trailing_whitespace = true

[*.py]
charset = utf-8
trim_trailing_whitespace = true

[*.yml]
trim_trailing_whitespace = true

[*.{yml,yaml,html}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[*.sh]
indent_size = 2
end_of_line = lf

[*.rb]
indent_size = 2

[*.json]
indent_size = 2

[{COPYING,LICENSE}]
indent_size = 2

[CMakeLists.txt]
indent_size = 2

[*.code-workspace]
indent_style = tab

[*.re]
indent_style = tab

[.textlintrc]
indent_size = 2

[*.{terms,words}]
indent_style = tab
